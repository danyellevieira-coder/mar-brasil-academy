// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

// ============================================
// USERS & AUTHENTICATION
// ============================================

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  password      String
  role          Role     @default(CUSTOMER)
  isSuperUser   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  departments     UserDepartment[]
  progress        VideoProgress[]
  quizAnswers     QuizAnswer[]
  assignedUsers VideoUserAccess[]
}

enum Role {
  ADMIN
  WORKER
  CUSTOMER
}

model Department {
  id        String   @id @default(cuid())
  name      String   @unique // "RH", "TI", "Licitações", etc.
  code      String   @unique // Código de acesso
  createdAt DateTime @default(now())

  // Relations
  users          UserDepartment[]
  videoAccess    VideoAccess[]
  playlistAccess PlaylistAccess[]
}

// Many-to-Many: Um usuário pode pertencer a múltiplos departamentos
model UserDepartment {
  id           String     @id @default(cuid())
  userId       String
  departmentId String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@unique([userId, departmentId])
}

// ============================================
// PLAYLISTS & VIDEOS
// ============================================

model Playlist {
  id          String   @id @default(cuid())
  title       String
  description String?
  thumbnail   String?
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  videos PlaylistVideo[]
  access PlaylistAccess[]
}

model Video {
  id                  String   @id @default(cuid())
  title               String
  description         String?
  youtubeUrl          String   // Link do YouTube (não listado)
  thumbnail           String?
  duration            Int?     // Duração em segundos
  isPublished         Boolean  @default(false)
  requiresCompletion  Boolean  @default(true)  // Se precisa marcar como concluído
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  playlists    PlaylistVideo[]
  access       VideoAccess[]
  assignedUsers VideoUserAccess[]
  questions    QuizQuestion[]
  progress     VideoProgress[]
}

model PlaylistVideo {
  id         String   @id @default(cuid())
  playlistId String
  videoId    String
  order      Int      @default(0)
  playlist   Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  video      Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@unique([playlistId, videoId])
}

// Controle de quais departamentos podem ver cada vídeo
model VideoAccess {
  id           String     @id @default(cuid())
  videoId      String
  departmentId String
  video        Video      @relation(fields: [videoId], references: [id], onDelete: Cascade)
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@unique([videoId, departmentId])
}

// Controle de quais usuários específicos podem ver cada vídeo
model VideoUserAccess {
  id      String @id @default(cuid())
  videoId String
  userId  String
  video   Video  @relation(fields: [videoId], references: [id], onDelete: Cascade)
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([videoId, userId])
}

// Controle de quais departamentos podem ver cada playlist
model PlaylistAccess {
  id           String     @id @default(cuid())
  playlistId   String
  departmentId String
  playlist     Playlist   @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@unique([playlistId, departmentId])
}

// ============================================
// QUIZ SYSTEM
// ============================================

model QuizQuestion {
  id          String       @id @default(cuid())
  videoId     String
  text        String       // Texto da pergunta
  type        QuestionType @default(MULTIPLE_CHOICE)
  order       Int          @default(0)
  video       Video        @relation(fields: [videoId], references: [id], onDelete: Cascade)

  // Relations
  options QuizOption[]
  answers QuizAnswer[]
}

enum QuestionType {
  MULTIPLE_CHOICE
  TEXT_INPUT
}

model QuizOption {
  id         String       @id @default(cuid())
  questionId String
  text       String
  isCorrect  Boolean      @default(false)
  question   QuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model QuizAnswer {
  id         String       @id @default(cuid())
  userId     String
  questionId String
  answer     String       // ID da opção ou texto livre
  isCorrect  Boolean?     // null para TEXT_INPUT (revisão manual)
  createdAt  DateTime     @default(now())

  user     User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  question QuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId])
}

// ============================================
// PROGRESS TRACKING
// ============================================

model VideoProgress {
  id            String   @id @default(cuid())
  userId        String
  videoId       String
  watchedFully  Boolean  @default(false)
  quizCompleted Boolean  @default(false)
  quizScore     Int?     // Porcentagem de acerto
  completedAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  video Video @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@unique([userId, videoId])
}
